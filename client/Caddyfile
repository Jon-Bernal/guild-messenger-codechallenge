jonbernal.com {

   handle /* {
     reverse_proxy /* localhost:5000
   }

  handle * {
     root * /root/guild-messenger-codechallenge/client/build
     encode zstd gzip
     try_files {path} {path}/ /index.html

     file_server
  }

  handle_errors {
     respond "{http.error.status_code} {http.error.status_text}"
  }

}